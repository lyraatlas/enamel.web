<footer class="footer-1 bg-secondary">
        <div class="container">
            <div class="row">
                <div class="col-md-3 col-sm-6" style="margin-top:20px;">
                    <div class="widget">
                        <h6 class="title">                        
                            <a href="/">
                                <div style="font-family: Playfair Display; font-size: 50px;font-weight:100; font-style:normal;" >
                                    Lyra Atlas
                                </div>
                            </a>
                        </h6>
                        <p class="gold">Live. Explore. Share.</p>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="widget">
                        <h6 class="title">Recent Posts</h6>
                        <hr>
                        <ul class="link-list recent-posts">
                            <% site.posts.sort('date', -1).limit(5).each(function(post){ %>
                            <li>
                                <a href="<%- url_for(post.path) %>"><%= post.title || '(no title)' %></a>
                                <span class="date gold"><%= date(post.updated, site.date_format)  || '' %></span>
                            </li>
                            <% }) %>
                        </ul>
                    </div>
                    <!--end of widget-->
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="widget">
                        <h6 class="title">Latest Updates</h6>
                        <hr>
                        <div class="twitter-feed">
                            <div class="tweets-feed" data-feed-name="mrareweb">
                            </div>
                        </div>
                    </div>
                    <!--end of widget-->
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="widget">
                        <h6 class="title">Instagram</h6>
                        <hr>
                        <div class="instafeed" data-user-name="lyraatlas">
                            <ul></ul>
                        </div>
                    </div>
                    <!--end of widget-->
                </div>
            </div>
            <!--end of row-->
            <div class="row">
                <div class="col-sm-6">
                    <span class="sub">&copy; Copyright 2018 - Lyra Atlas</span>
                </div>
                <div class="col-sm-6 text-right">
                    <ul class="list-inline social-list">
                        <li>
                            <a href="#">
